                                            </ul>
                                        }
                                    </li>
                                </ul>

                                @if (Request.IsAuthenticated)
                                {
                                    <div style="display:none">
                                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { @id = "logOffForm" }))
                                        {
                                            @Html.AntiForgeryToken()}
                                    </div>}
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="main_nav_container">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 text-right">
                            <div class="logo_container">
                                <a style="color: #393939" href="/">Daizy <span style="color: #7bb90e">Corner</span></a>
                            </div>
                            <nav class="navbar">
                                @Html.Action("MenuTop", "Menu")
                                <ul class="navbar_user">
                                    <li><a href="#" data-toggle="modal" data-target="#searchModal"><i class="fa fa-search" aria-hidden="true"></i></a></li>
                                    @if (!Request.IsAuthenticated)
                                    {
                                        <li><a href="/account/login"><i class="fa fa-user" aria-hidden="true"></i></a></li>

                                    }
                                    else
                                    {
                                        <li><a href="/account/profile"><i class="fa fa-user" aria-hidden="true"></i></a></li>
                                    }
                                    @*<li><a href="/account/profile"><i class="fa fa-user" aria-hidden="true"></i></a></li>*@
                                    <li class="checkout">
                                        <a href="/gio-hang">
                                            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                            <span id="checkout_items" class="checkout_items">0</span>
                                        </a>
                                    </li>
                                </ul>
                                <div class="hamburger_container">
                                    <i class="fa fa-bars" aria-hidden="true"></i>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

        </header>


        @RenderBody()
